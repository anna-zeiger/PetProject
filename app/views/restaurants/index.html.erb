<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th> </th>
      <th>Name</th>
      <th>Cusine</th>
      <th>Rating</th>
      <th>Accepts10bis</th>
      <th>Address</th>
      <th>Maxdeliverytime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>

        <td><%= restaurant.name %></td>
        <td><%= restaurant.cuisine.name %></td>
        <td><%= restaurant.rating %></td>
        <td><%= restaurant.accepts10bis %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.maxDeliveryTime %></td>
        <td><%= link_to 'reviews', reviews_by_restaurant_path(restaurant.id)%></td>
        <td><%= link_to 'add review', new_review_path(restaurant.id), method: :post%></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant.id) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

