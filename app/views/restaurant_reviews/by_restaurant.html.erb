<p id="notice"><%= notice %></p>

<h1>Restaurant Reviews</h1>

<table>
  <thead>
    <tr>
      <th> restaurant_id</th>
      <th> reviewer name</th>
      <th>Rating</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurant_reviews.each do |restaurant_review| %>
      <tr>
        <td><%= restaurant_review.restaurant_id %></td>
        <td><%= restaurant_review.reviewer_name %></td>
        <td><%= restaurant_review.rating %></td>
        <td><%= restaurant_review.comment %></td>
        <td><%= link_to 'Show', restaurant_review %></td>
        <td><%= link_to 'Edit', edit_restaurant_review_path(restaurant_review) %></td>

        <td><%= link_to 'Destroy', restaurant_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

